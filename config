mode hdmi {
        # switch on/off hdmi
        bindsym o exec --no-startup-id /home/v/.config/i3/i3wm_config/hdmi.sh on        
        bindsym f exec --no-startup-id /home/v/.config/i3/i3wm_config/hdmi.sh off
        bindsym c exec --no-startup-id /home/v/.config/i3/i3wm_config/create_hdmi_mode.sh
        bindsym Return mode "default"
        bindsym Escape mode "default"

}
    
bindsym $mod+Shift+h mode "hdmi"

    
mode sound {
        # toggle to hdmi audio
        bindsym h exec --no-startup-id /home/v/.config/i3/i3wm_config/toggle_snd.sh hdmi
        bindsym a exec --no-startup-id /home/v/.config/i3/i3wm_config/toggle_snd.sh analog
        bindsym m exec --no-startup-id /home/v/.config/i3/i3wm_config/toggle_mic.sh monitor
        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}       
    
bindsym $mod+Shift+s mode "sound"

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id /home/v/.config/i3/i3wm_config/i3exit.sh lock, mode "default"
    bindsym e exec --no-startup-id /home/v/.config/i3/i3wm_config/i3exit.sh logout, mode "default"
    bindsym s exec --no-startup-id /home/v/.config/i3/i3wm_config/i3exit.sh suspend, mode "default"
    bindsym h exec --no-startup-id /home/v/.config/i3/i3wm_config/i3exit.sh hibernate, mode "default"
    bindsym r exec --no-startup-id /home/v/.config/i3/i3wm_config/i3exit.sh reboot, mode "default"
    bindsym Shift+s exec --no-startup-id /home/v/.config/i3/i3wm_config/i3exit.sh shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+End mode "$mode_system"
            
